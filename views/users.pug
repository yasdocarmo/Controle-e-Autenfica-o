doctype html
html
  head
    title Usuários
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
  body(class="bg-light")
    .container.py-5
      .d-flex.justify-content-between.align-items-center.mb-4
        h1.mb-0 Lista de Usuários
        a.btn.btn-outline-danger(href="/logout") Sair
      ul.list-group.mb-4
        each user in users
          li.list-group-item.d-flex.justify-content-between.align-items-center
            span #{user.username}
            form(method="post", action=`/users/delete/${user.id}`)
              button.btn.btn-sm.btn-danger(type="submit") Remover
      a.btn.btn-outline-primary(href="/products") Produtos
