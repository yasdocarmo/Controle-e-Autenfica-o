doctype html
html
  head
    title Login
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
  body(class="bg-light d-flex align-items-center" style="min-height:100vh;")
    .container
      .row.justify-content-center
        .col-md-4.col-12
          .card.shadow
            .card-body
              h1.mb-4.text-center Login
              if error
                div.alert.alert-danger #{error}
              form(method="post", action="/login")
                .mb-3
                  label.form-label Usu√°rio:
                  input.form-control(type="text", name="username", required)
                .mb-3
                  label.form-label Senha:
                  input.form-control(type="password", name="password", required)
                button.btn.btn-primary.w-100(type="submit") Entrar
              .mt-3.text-center
                a(href="/register") Registrar
