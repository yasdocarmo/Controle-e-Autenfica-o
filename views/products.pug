doctype html
html
  head
    title Produtos
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
  body(class="bg-light")
    .container.py-5
      .d-flex.justify-content-between.align-items-center.mb-4
        h1.mb-0 Lista de Produtos
        a.btn.btn-outline-danger(href="/logout") Sair
      ul.list-group.mb-4
        each product in products
          li.list-group-item.d-flex.justify-content-between.align-items-center
            span #{product.name} - R$#{product.price}
            form(method="post", action=`/products/delete/${product.id}`)
              button.btn.btn-sm.btn-danger(type="submit") Remover
      h2.mt-5.mb-3 Novo Produto
      form(method="post", action="/products/create")
        .mb-3
          label.form-label Nome:
          input.form-control(type="text", name="name", required)
        .mb-3
          label.form-label Preço:
          input.form-control(type="number", name="price", required, step="0.01")
        .mb-3
          label.form-label Descrição:
          textarea.form-control(name="description")
        button.btn.btn-success(type="submit") Adicionar
      a.btn.btn-outline-primary.mt-3(href="/users") Usuários
